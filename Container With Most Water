class Solution {
    public int maxArea(int[] height) {
        int n = height.length;
        int ans = -1;

        int i = 0;
        int j = n-1;

        while(i < j){
            int minM = Math.min(height[i], height[j]);
            ans = Math.max(ans, (j-i) * minM);
            if(minM == height[i]) i++;
            else j--;
        }

        return ans;

    }
}
