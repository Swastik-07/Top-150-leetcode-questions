class Solution {
    public String longestCommonPrefix(String[] strs) {
        int n=strs.length;

        String ans=strs[0];

        for(int i=1;i<n;i++){
            int j=0;
            int minLength = Math.min(ans.length(), strs[i].length());

            while(j < minLength && ans.charAt(j) ==  strs[i].charAt(j)){
                j++;
            }
            ans = ans.substring(0, j);
        }
        return ans;
    }
}
