class Solution {
    public boolean isPalindrome(String s) {
        String newString = s.toLowerCase();

        int i=0;
        int j = newString.length() -1 ;

        while(i < j){
            char ch1 = newString.charAt(i);
            char ch2 = newString.charAt(j);

            if(!Character.isLetterOrDigit(ch1)) i++;
            else if(!Character.isLetterOrDigit(ch2)) j--;
            else{
                if(ch1 != ch2) return false;
                i++;
                j--;
            }
        }

        return true;
    }
}
